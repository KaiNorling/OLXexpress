<%- include('parts/header') %> <% var error%> 

<section class="my-4 py-4">
	<h1 class="text-center font-bold text-[30px] text-gray-500"><%= ads.category_id.name%></h1>
	<h1 class="text-center">Title: <%= ads.title%></h1>
	<div class="container mx-auto flex items-start mt-4 ">

		<div class="w-[50%]"> <img
			src="/uploads/<%= ads.photos[0]%>"
			class="object-cover w-full h-full"
			alt="..."
		/> </div>

		<div class=" flex flex-col items-center w-[50%]">
			<table class="min-w-full text-center border-2  w-full h-full	">
				<thead class="bg-gray-800 text-white border">
					<tr>
						<th scope="col">Features</th>
						<th scope="col">Value</th>
					</tr>
				</thead class="">
				<tbody>
					<tr class="bg-white border-b">
						<td><div>Category:</div> Category ID:</td>
						<td class="flex flex-col"> <div><%= ads.category_id.name%> </div><%= ads.category_id._id%></td>
					</tr>
				
		
					<tr class="bg-white border-b">
						<td class="flex flex-col"><span>Username of Owner:</span><span>Owner Phone:</span></td>
						<td class=" "><a href="/users/<%= ads.owner_id._id%>"><%= ads.owner_id.username%></a>
						<br>	<span><%= ads.phone%></span>
						</td>
					</tr>	
					<tr class="bg-white border-b">
						<td>Email of Owner</td>
						<td><%= ads.owner_id.email%></td>
					</tr>

				
					</tr>
					<tr class="bg-white border-b">
						<td>Descriptin</td>
						<td><%= ads.description%></td>
					</tr>
					<tr class="bg-white border-b">
						<td>Price</td>
						<td ><%= ads.price%>  <%= ads.currency%>  </td>
					</tr>
				
				</tbody>
			</table>

			<div class="flex items-center mt-5">
			<a
			href="/messages/<%= ads.owner_id._id %>"
			class="bg-blue-500 hover:bg-blue-400 text-white font-bold py-2 px-4 border-b-4 border-blue-700 hover:border-blue-500 rounded"
			>Messaging</a>
		</div>

		
		




</section>

<%- include('parts/footer') %>