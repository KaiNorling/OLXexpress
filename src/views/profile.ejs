<%- include ('parts/header') %> <% var isOwnProfile %>
 
  <div class="container mx-auto p-7  rounded " style=" color: rgb(54, 54, 54); font-weight: 900; box-shadow: 4px 4px 8px 0px rgba(34, 60, 80, 0.2);";>
    <h1 class="text-center text-green-500 font-bold text-[35px]" >Profile Page of User : </h1>
    <h1 class="text-center text-blue-500  text-[25px] flex flex-col" > 
      Username:  <%= profile.username%> 
    <% if(isOwnProfile) {%> 
       <div class="mt-3"> Sessions of User: <a href="/users/sessions" class="bg-blue-500 hover:bg-blue-400 text-white font-bold py-2 px-4 border-b-4 border-blue-700 hover:border-blue-500 rounded">  Sessions</a></div>
      <%} %>
    </h1>
    <ul class="  mt-4 flex items-center justify-between flex-wrap ">
      <% for (let ads of user_ads ){%>
          <li class="basis-1/4  mt-3">
              <a href="/ads/<%= ads.slug%>" class=" " >
                  <img src="/uploads/<%= ads.photos[0] %>" class="w-[100px] h-[100px] rounded-full mt-4  object-cover " alt="/<%= ads.name %>">
                  <a href="/ads/<%= ads.slug%>" class="mt-4 font-bold text-gray-600 text-[20px]"><%= ads.title %></a>

              </a>
          </li>
      <%} %>
   </ul>
  </div>
 

	<%- include ('parts/footer') %>

