<%- include("parts/header")%>

<% var category %>


    <section class="m-4 p-4 container mx-auto">
        <div class=" flex items-center flex-col"> 
          
                <h2 class="px-[30px] py-[10px]  border-2 border-gray-300 bg-white  rounded-lg  focus:outline-none bg-white-500 hover: text-gray-500 font-bold  border-b-4 border-blue-700 hover:border-gray-500 rounded text-center text-[50px]  " ><%=category.name%></h2>
                <ul class="flex justify-start items-center flex-wrap mt-4  ">
                    <% for (let ads of category_ads ){%>
                        <li class="basis-1/6 flex flex-col items-center mt-2">
                            <a href="/ads/<%= ads.slug%>" class="flex items-center">
                                <img src="/uploads/<%= ads.photos[0] %>" class="w-[100px] h-[100px] rounded-full mt-4  object-cover " alt="/<%= ads.name %>">
                                <a href="/ads/<%= ads.slug%>" class="mt-4 font-bold text-gray-600 text-[20px]"><%= ads.title %></a>
            
                            </a>
                        </li>
                    <%} %>
                 </ul>
                    

            
        </div>

    </section>



<%- include("parts/footer")%>